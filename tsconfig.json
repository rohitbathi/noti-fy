{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "sourceMap": true,
        "types": ["node"],
        "resolveJsonModule": true,
        "rootDir": "./src",
        "outDir": "./dist",
    },
    "exclude": ["node_modules", "**/node_modules/*"]
}